"*":
  welcome:
    showOnStartup: false
  core:
    projectHome: "~/Repositories"
    themes: [
      "one-light-ui"
      "atom-espresso-soda-theme"
    ]
    disabledPackages: [
      "metrics"
      "exception-reporting"
      "jshint"
    ]
  editor:
    invisibles: {}
    scrollPastEnd: true
    showIndentGuide: true
    fontFamily: "Menlo"
    showInvisibles: true
    softWrap: false
    softWrapAtPreferredLineLength: true
    softWrapHangingIndent: 2
    fontSize: 15
  minimap:
    plugins:
      "find-and-replace": true
  "one-light-ui": {}
  jshint:
    supportLintingJsx: true
  "tree-view":
    hideIgnoredNames: true
    squashDirectoryNames: true
  "git-plus": {}
".diff.source":
  editor:
    softWrapHangingIndent: 2
